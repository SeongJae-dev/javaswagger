<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="comment">
	<insert id="insertComment">
		insert into comments values(#{comment_no},#{post_no},#{comment_content},sysdate,#{user_ID})
	</insert>

	<delete id="deleteComment">
		delete comments where comment_no=#{comment_no}
	</delete>
	<delete id="deleteAllComment">
		delete comments where post_no=#{post_no}
	</delete>

	<update id="updateComment">
		update comments set comment_content=#{comment_content} where post_no=#{post_no} and user_ID={#user_ID} and comment_no=#{comment_no}
	</update>

	<select id="readComment" resultType="commentVo">
		select * from comments where post_no = #{post_no} order by comment_date
	</select>
	
	<select id="nextNo" resultType="java.lang.Integer">
		select nvl(max(comment_no),0)+1 from comments
	</select>
</mapper>